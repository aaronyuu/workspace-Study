package cn.yuchuanxi;

import java.io.File;
import java.io.IOException;

public class FileDemoJava {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		File file1 = new File("d:\\aa.txt");
		File file2 = new File("d:\\mulu");

		if (!file1.exists()) {
			System.out.println("该文件不存在,现在创建文件");
			try {
				file1.createNewFile();
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}

		if (file1.isDirectory()) {
			System.out.println(file1.getName() + "是目录");
		} else if (file1.isFile()) {
			System.out.println(file1.getName() + "是一个文件");
		} else {
			System.out.println("文件不存在!!");
		}

		if (!file2.exists()) {
			System.out.println("该文件不存在,现在创建文件");
			file2.mkdir();
			/**
			 * 多级目录使用mkdirs()
			 */
//				file2.mkdirs();
		}
		
		
		/**
		 * 判断是否是文件夹
		 */
		System.out.println(file1.isDirectory());
		/** 
		 * 判断是否是文件
		 */
		System.out.println(file2.isFile());
		/**
		 * 删除文件/文件夹
		 */
		file1.delete();
		System.out.println(file1);
		System.out.println(file1.getAbsolutePath());
		System.out.println(file1.getParent());
		System.out.println(file1.getName());
		
		FileUtils.listFile("D:\\");
		
	}
}
